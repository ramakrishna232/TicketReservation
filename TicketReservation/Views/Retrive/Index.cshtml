@model IList<TicketReservation.Models.Train>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body>
    <div style="position:relative;top:100px;">
        <table class="table">
            <tr>
                <th>
                    Source
                </th>
                <th>
                   Destination
                </th>
                <th>
                   TrainName
                </th>
                <th>
                    TrainNo
                </th>
                <th>
                    ACAvailable
                </th>
                <th>
                    SLAvailable
                </th>
                <th>
                    SSAvailble
                </th>
                
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Source
                    </td>
                    <td>
                        @item.Destination
                    </td>
                    <td>
                        @item.TrainName
                    </td>
                    <td>
                        @item.TrainNo
                    </td>
                    
                    <td>
                        
                        @if(@item.ACAvailable>0){
                            <p style="color:darkgreen">AVBL_@item.ACAvailable</p>
                            <p >@Html.ActionLink("Book_Now","Create","passengers")</p>
                        }
                    </td>
                    <td>
                        @item.SLAvailable
                    </td>
                    <td>
                        @item.SSAvailable
                    </td>

                </tr>
            }

        </table>

        
    </div>
</body>
</html> 